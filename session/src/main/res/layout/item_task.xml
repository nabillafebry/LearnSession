<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:id="@+id/cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="NAMA"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/denimBlue"
            android:textSize="15sp"
            android:id="@+id/customer_name_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ALAMAT"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:id="@+id/customer_address_textview"
            android:layout_below="@id/customer_name_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Selesai pada 16 Februari 2018"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/finish_date_textview"
            android:layout_below="@id/start_date_textview"
            android:background="@color/veryLightBlue"
            android:textColor="@color/pumpkinOrange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Selasa, 10 Januari 2018"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/start_date_textview"
            android:layout_below="@id/customer_address_textview"
            android:textColor="@color/text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="36482"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/task_id_textview"
            android:layout_below="@id/customer_address_textview"
            android:textColor="@color/veryLightBlue"
            android:layout_alignParentRight="true"
            android:background="@color/azure"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#003496843"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:id="@+id/customer_id_textview"
            android:layout_alignParentRight="true"
            android:textColor="@color/peacokBlue"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
